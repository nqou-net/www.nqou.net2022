desc 'build';
task build => sub {
    sh qw{tools/rename_posts.pl};
    sh qw{hugo -v};
};

desc 'new post';
task new => sub {
    my $time = time;
    sh qw{hugo new}, "post/$time.md";
};

desc 'show drafts';
task drafts => sub {
    sh qw{hugo list drafts};
};

desc 'develop server';
task server => sub {
    sh qw{hugo server -D};
};

task default => sub { sh q{daiku -T} };
