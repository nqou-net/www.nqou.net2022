desc 'deploy';
task deploy => sub {
#    sh qw{hugo clean};
    sh qw{tools/rename_posts.pl};
#    sh qw{hugo deploy};
};

desc 'new post';
task new => sub {
    my $time = time;
    sh qw{hugo new}, "post/$time.md";
};

desc 'show drafts';
task drafts => sub {
    sh qw{hugo list drafts};
};

task default => sub { sh q{daiku -T} };
